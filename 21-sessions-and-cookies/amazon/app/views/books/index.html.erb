<p id="notice"><%= notice %></p>

<h1>Books</h1>


<strong>Cart: <%= @cart_books.count %></strong>
<ul>
<% @cart_books.each do |book| %>
  <li><%= book.title %></li>
  <%= button_to "Remove this shiz", {action: 'remove_from_cart', controller: 'cart', id: book.id }, method: :delete  %>
<% end %>
</ul>

<%= link_to_if @cart_books.present?, "Clear this shiz.", { controller: "cart", action: "clear_cart" }, method: :delete %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Page count</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.page_count %></td>
        <td><%= book.year %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to "Add to cart", {action: 'add_to_cart', controller: 'cart', id: book.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
