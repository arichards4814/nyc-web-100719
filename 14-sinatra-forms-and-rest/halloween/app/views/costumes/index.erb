<a href="/costumes/new"><h3>Make a new 'stume! 🦁</h3></a>
 
<% @costumes.each do |costume| %>
  <a href="/costumes/<%= costume.id %>"><h3><%= costume.name %></h3></a>
  <p>Size: <%= costume.size %></p>
  <p>Price: $<%= costume.price %></p>
  
  <a href="/costumes/<%= costume.id %>/edit">Edit this 'stume</a>

  <form action="/costumes/<%= costume.id %>" method="POST">
    <input type="submit" value="DELETE THIS COSTUME">
    <input id="hidden" type="hidden" name="_method" value="DELETE">
  </form>
  
  <hr>
<% end %>